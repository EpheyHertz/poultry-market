# Email Configuration (Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# Support Email (where contact form submissions are sent)
SUPPORT_EMAIL=support@poultrymarket.co.ke

# Admin Email (for admin notifications)
ADMIN_EMAIL=admin@poultrymarket.co.ke

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/poultry_market"

# NextAuth Configuration
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# IntaSend Payment Gateway Configuration (Author Support System)
INTASEND_PUBLISHABLE_KEY=your-intasend-publishable-key
INTASEND_SECRET_KEY=your-intasend-secret-key
INTASEND_WEBHOOK_CHALLENGE=your-webhook-challenge-secret
# Set to 'YES' for sandbox/testing, 'NO' for production
INTASEND_TEST_MODE=YES

# Lipia Payment Gateway Configuration
LIPIA_API_KEY=your-lipia-api-key
LIPIA_BASE_URL=https://lipia-api.kreativelabske.com/api/v2

# Application URL (for callbacks and email links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Additional environment variables as needed...
